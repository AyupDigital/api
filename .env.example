# The name of the application.
APP_NAME="Connected Places"
# The application environment.
APP_ENV=local
# The unique application key.
APP_KEY=
# If the application is in debug mode.
APP_DEBUG=true
# The URL the application is hosted on (used in the CLI).
APP_URL=http://localhost
# The URL of the admin web app.
BACKEND_URI=http://localhost:8080

# The logging configuration.
LOG_CHANNEL=stack
BUGSNAG_API_KEY=

# The database configuation.
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=connected_places
DB_USERNAME=connected_places
DB_PASSWORD=secret

# The AWS credentials.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=

# The filesystem configuration.
FILESYSTEM_CLOUD=local_cloud
AWS_BUCKET=

# The sessions configuration.
SESSION_LIFETIME=20

# The queue configuration.
QUEUE_DRIVER=sync

# The AWS SQS config.
SQS_REGION=
SQS_PREFIX=

# The Redis configuration.
REDIS_CLUSTER=redis
REDIS_SCHEME=tcp
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=7000

# The geocoding configuration.
GEOCODE_DRIVER=google
GOOGLE_API_KEY=

# The email configuration.
MAIL_DRIVER=log
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=

# The Mailgun credentails.
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=

# The SMS configuration.
SMS_DRIVER=log

# The Twilio credentials.
TWILIO_SID=
TWILIO_TOKEN=

# The GOV.UK Notify credentails.
GOV_NOTIFY_API_KEY=
GLOBAL_ADMIN_EMAIL=info@connectedplaces.org

# The Elasticsearch configuration.
SCOUT_ELASTIC_HOST=elasticsearch
SCOUT_ELASTIC_PORT=9200
SCOUT_ELASTIC_SCHEME=http
SCOUT_ELASTIC_USERNAME=null
SCOUT_ELASTIC_PASSWORD=null

# If 2FA should be required.
OTP_ENABLED=false

# Passport keys.
PASSPORT_PRIVATE_KEY=
PASSPORT_PUBLIC_KEY=
